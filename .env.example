# Database Configuration
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=investment
DB_HOST=localhost
DB_PORT=5432

# Financial Market Data API Keys
FMP_API_KEY_PRIMARY=your_fmp_api_key_primary
FMP_API_KEY_SECONDARY=your_fmp_api_key_secondary
FRED_API_KEY=your_fred_api_key

# J-Quants API (Japanese Market Data)
JQUANTS_EMAIL=your_jquants_email
JQUANTS_PASSWORD=your_jquants_password

# Notification Service (Pushover)
PUSHOVER_TOKEN=your_pushover_app_token
PUSHOVER_USER_KEY=your_pushover_user_key

# Reports Configuration
# Base directory for report outputs
# Default points to investment-reports repository (sibling of investment-toolkit)
# REPORTS_BASE_DIR=../investment-reports

# iCloud sync for reports (default: false)
# Set to true and specify ICLOUD_REPORTS_DIR to enable iCloud sync
# ENABLE_ICLOUD_SYNC=true
# ICLOUD_REPORTS_DIR=~/Library/Mobile Documents/com~apple~CloudDocs/reports

# Workspace Configuration
# Path to investment-workspace repository (for scripts and portfolio)
# INVESTMENT_WORKSPACE_ROOT=../investment-workspace

# Portfolio Configuration
# Path to portfolio.json file (default: ./config/portfolio.json)
# PORTFOLIO_JSON_PATH=../investment-workspace/config/portfolio.json

# Logging Configuration
# Log directory (default: ./logs)
LOG_DIR=./logs
LOGLEVEL=INFO
